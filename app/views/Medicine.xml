<Alloy>
	<Window id="winMedicine" class="container" title="Medicine" onClick="winMedicine_onClick">
		<ScrollView id="vItems">
			<Label class="cLabel">Medicine:</Label>
			<TextField id="txtType"  onClick="txtType_onClick" />
			<Label class="cLabel">Lot:</Label>
			<TextField id="txtLot" />
			<Label class="cLabel">Comment:</Label>
			<TextArea id="taComment" />
			<View id="vPickedUp">
				<Label id="lblPickedUp">Picked up</Label>
				<Switch id="sPickedUp" />
			</View>
			<Button id="btnQ" title="View Questionaire" onClick="btnQ_onClick"></Button>
			<Button id="btnSave" title="SAVE" onClick="btnSave_onClick"></Button>
		</ScrollView>
	</Window>
</Alloy>